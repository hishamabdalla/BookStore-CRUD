@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Books!</h4>
        <p class="mb-0"> No books were added yet. </p>
    </div>
}else
{
   <div class="row mt-5">
       @foreach (var book in Model)
        {
            <a class="col-lg-3 col-md-4 col-sm-6 mb-4 text-decoration-none" asp-action="Details" asp-controller="Books" asp-route-Id="@book.Id">
                <div class="card book-card h-100 border-0 rounded overflow-hidden">
                    <!-- Book Cover -->
                    <div class="card-img-top" style="height: 300px; background: url('@($"{FileSettings.ImagesPath}/{book.Cover}")') no-repeat center; background-size: cover;"></div>
                    <!-- Book Info -->
                    <div class="card-body p-3">
                        <!-- Book Title -->
                        <h5 class="card-title mb-2" style="font-weight: 500; font-size: 1.2rem;">@book.Title</h5>
                        <!-- Price -->
                        <p class="text-muted mb-1" style="font-size: 1rem;">@book.Price.ToString("C", new System.Globalization.CultureInfo("en-EG"))</p>
                        <!-- Category Badge -->
                        <span class="badge bg-light text-dark rounded-pill px-2 py-1">@book.Category?.Name</span>
                    </div>
                </div>
            </a>

        }
   </div> 
}
