@model Book
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Book Cover -->
        <div class="col-md-4">
            <div class="book-cover" style="background-image: url('@($"{FileSettings.ImagesPath}/{Model.Cover}")');"></div>
        </div>

        <!-- Book Details -->
        <div class="col-md-8">
            <div class="book-details">
                <!-- Book Title -->
                <h3 class="book-title">@Model.Title</h3>

                <!-- Category Badge -->
                <span class="badge bg-secondary">@Model.Category?.Name</span>

                <!-- Price -->
                <h4 class="book-price">@Model.Price.ToString("C", new System.Globalization.CultureInfo("en-EG"))</h4>

                <!-- Book Description -->
                <div class="book-description">
                    <h5>Description:</h5>
                    <p>@Model.Description</p>
                </div>

                <!-- Action Buttons (e.g., Add to Cart, Buy) -->
                <div class="action-buttons">
                    <a href="@Url.Action("AddToCart", new { id = Model.Id })" class="btn btn-outline-success me-2">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </a>
                    <a href="@Url.Action("BuyNow", new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="bi bi-credit-card"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

