<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Book_Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa; /* Slightly lighter background color */
            color: #212529; /* Slightly darker text color for better readability */
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1030;
            background-color: #343a40; /* Dark header for a sleek look */
            color: #ffffff;
        }

        .sidebar {
            width: 220px;
            min-height: 100vh;
            background-color: #ffffff; /* White background for sidebar */
            color: #495057; /* Dark text for sidebar links */
            transition: all 0.3s;
            border-right: 1px solid #dee2e6; /* Light border to distinguish the sidebar */
        }

            .sidebar .nav-link {
                color: #495057; /* Slightly darker color for links */
                padding: 10px 20px; /* Increased padding for better spacing */
                border-radius: 4px;
                margin: 5px 0;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #e2e6ea; /* Lighter hover effect */
                    color: #343a40; /* Highlighted blue color for active links */
                }

        .content {
            flex-grow: 1;
            padding: 30px;
            background-color: #ffffff; /* White background for main content */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Slightly larger shadow for the content area */
            margin: 10px;
            border-radius: 8px;
        }

        footer {
            background-color: #343a40; /* Matching footer color with header */
            color: #ffffff;
            padding: 15px;
            border-top: 2px solid #495057; /* Slightly lighter border for footer */
        }

        .navbar-brand {
            font-size: 1.6rem; /* Slightly larger font size for the brand */
        }

        .container-fluid {
            max-width: 1140px; /* Fixed width for better alignment */
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="p-3 shadow-sm">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-book"></i> Book Store
            </a>
            <span>@ViewData["Title"]</span>
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-none d-md-block">
            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Books" asp-action="Index">
                        <i class="bi bi-book"></i> Books
                    </a>
                </li>
                <!-- Additional links can be added here -->
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-4 text-center">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-white">&copy; 2024 - Book Store</span>
                <a class="text-white text-decoration-none" href="#">
                    Privacy Policy
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
