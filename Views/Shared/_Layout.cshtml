<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Book_Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1030; /* High z-index to stay above other elements */
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #343a40; /* Dark background for sidebar */
            color: white;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #adb5bd; /* Lighter color for links */
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #495057; /* Hover effect */
                    color: white;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

        footer {
            background-color: #343a40;
            color: #adb5bd;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white p-3 shadow-sm">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-book"></i> Book Store
            </a>
            <span>@ViewData["Title"]</span>
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-none d-md-block border-end">
            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Books" asp-action="Index">
                        <i class="bi bi-book"></i> Books
                    </a>
                </li>    
                <!-- Additional links can be added here -->
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer mt-auto py-3 text-center">
        <div class="container">
            &copy; 2024 - Book_Store - <a class="text-reset" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
