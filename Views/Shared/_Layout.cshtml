<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Book_Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
   
</head>
<body>
    <!-- Header -->
    <header class="p-3 shadow-sm">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-book"></i> Book Store
            </a>
            <ul class="navbar-nav d-flex flex-row align-items-center">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item me-3">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item me-3">
                        <span class="navbar-text text-white">Welcome, @User.Identity.Name!</span>
                    </li>

                   
                   

                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-white p-0">Logout</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </header>




    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-none d-md-block">
            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    @if(User.IsInRole("Admin")){
                    <a class="nav-link active" asp-controller="Books" asp-action="Index">
                        <i class="bi bi-book"></i> Add Books
                    </a>
                    }
                </li>
                <!-- Additional links can be added here -->
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-4 text-center">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-white">&copy; 2024 - Book Store</span>
                <a class="text-white text-decoration-none" href="#">
                    Privacy Policy
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
